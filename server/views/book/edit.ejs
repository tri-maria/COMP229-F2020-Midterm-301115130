<%- include ../partials/header.ejs%>
<%- include ../partials/main_nav.ejs%>

<!--Content for the Edit page-->


<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">  <!--offset from the left 3, 6 at the middle at the screen-->
        <h1> <%= title%> </h1>
        
        <form  class="form" method="POST" action="/book-list/edit/<%= book._id %>">
            <div class="form-group">
                <label for="name">Book Title</label>
                <input type="text" class="form-control"
                    id="nameTextField" placeholder="Enter the Book Title"
                    
                    
                    name="name" required value=" <% book.name %>">
             
                </div>

            <div class="form-group">
                <label for="authorTextField">Author</label>
                <input type="text" class="form-control"
                    id="authorTextField"
                    value="<% book.author %>"
                    placeholder="Enter the Book's Author"
                    name="author" required>
                </div>     

            <div class="form-group">
                <label for="publishedTextField">Year</label>
                <input type="text" class="form-control"
                    id="publishedTextField"
                    value="<% book.published %>"
                    placeholder="Enter the Year of Publication"
                    name="published" required>
            </div>   
            
            <div class="form-group">
                <label for="descriptionTextField">Description</label>
                <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    value="<% book.description %>"
                    placeholder="Enter a brief description of the book"
                    name="description" required> 
                </textarea>
            </div>  

            <div class="form-group">
                <label for="priceTextField">Price</label>
                <input type="number" class="form-control"
                    id="priceTextField"
                    value="<% book.price %>"
                    placeholder="Enter the Book's price"
                    name="price" required>
            </div>  
            <button class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i>Submit </button>
                <a href="/book-list" class="btn btn-warning"> <i class="fas fa-undo"></i>Cancel</a>

              
            </form>
        </div>
    </div>
</div>
<%- include ../partials/bottom_nav.ejs%>
<%- include ../partials/footer.ejs%>